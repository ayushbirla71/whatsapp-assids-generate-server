option_settings:
  aws:elasticbeanstalk:application:environment:
    # Application Settings
    DEBUG: "False"
    LOG_LEVEL: "INFO"
    CRON_ENABLED: "True"
    
    # Asset Generation Settings
    ASSET_TEMP_DIR: "/var/app/current/temp_assets"
    MAX_CONCURRENT_GENERATIONS: "10"
    
    # AWS Settings (will be overridden by eb setenv)
    AWS_REGION: "us-east-1"
    
    # Python Settings
    PYTHONPATH: "/var/app/current"

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/01_restart_supervisor.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      # Restart any background processes if needed
      echo "Application deployed successfully"

  "/var/app/current/.env":
    mode: "000644"
    owner: webapp
    group: webapp
    content: |
      # This file will be populated by environment variables
      # Set via: eb setenv KEY=VALUE
